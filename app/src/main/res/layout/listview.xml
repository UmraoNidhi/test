<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/Car_list"
        android:background="@drawable/shape_radious"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:elevation="@dimen/scale10"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:id="@+id/Linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:background="@drawable/shape_radious"
                android:src="@drawable/car"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/scale10">
                <TextView
                    android:id="@+id/Text_name"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/Black"
                    android:text="L-125-12329th street NW DC"
                    android:textSize="@dimen/text_size14">
                </TextView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/Text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Convention center, Close to museum"
                    android:padding="3dp"
                    android:ellipsize="end"
                    android:textSize="14dp">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale5">
                    <ImageView
                        android:src="@drawable/ic_loc"
                        android:layout_width="23dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="@dimen/scale5">

                    </ImageView>
                    <TextView
                        android:id="@+id/Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Convention center, Close to museum, New York "
                        android:textSize="@dimen/text_size12">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="@dimen/scale5"
                            android:paddingRight="@dimen/scale5"
                            android:tint="@color/blue"
                            android:src="@drawable/fast"></ImageView>
                        <TextView
                            android:id="@+id/Distance"
                            android:paddingBottom="5dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="0.7 mi"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/text_size16">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:tint="@color/Black"
                            android:padding="2dp"
                            android:text="@string/dollar_symbol"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="top"
                            android:fontFamily="@font/montserrat_regular">
                        </TextView>

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="10.00"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/text_size16"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>